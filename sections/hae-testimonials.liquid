{{ 'testimonials.css' | asset_url | stylesheet_tag }}

<div
  class="testimonials color-{{ section.settings.color_scheme }}"
  data-section-id="{{ section.id }}"
  data-section-type="testimonials"
>
  <div class="container-main section-padding-small">
    {% if section.settings.title != blank %}
      <div class="testimonials__header">
        <h2 class="testimonials__title {{ section.settings.headline_size }}">{{ section.settings.title | escape }}</h2>
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="testimonials__grid grid grid-3">
        {% for block in section.blocks limit: 3 %}
          <div class="testimonials__item" {{ block.shopify_attributes }}>
            <div class="testimonials__content">
              <div class="testimonials__quote-icon">
                {% render 'icon-quote' %}
              </div>
              {% if block.settings.quote != blank %}
                <blockquote class="testimonials__quote">
                  {{ block.settings.quote }}
                </blockquote>
              {% endif %}
              {% if block.settings.author != blank %}
                <cite class="testimonials__author">{{ block.settings.author | escape }}</cite>
              {% endif %}
              {% if block.settings.rating != blank %}
                <div class="testimonials__rating">
                  {% assign rating = block.settings.rating | plus: 0 %}
                  {% for i in (1..5) %}
                    <span class="testimonials__star {% if i <= rating %}testimonials__star--filled{% endif %}">
                      â˜…
                    </span>
                  {% endfor %}
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {% if section.blocks.size == 0 %}
      <div class="testimonials__empty">
        <p>Add testimonial blocks to showcase customer reviews</p>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Testimonials",
  "max_blocks": 3,
  "settings": [
    {
      "type": "header",
      "content": "Color Scheme"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Headline",
      "default": "What Our Customers Say"
    },
    {
      "type": "select",
      "id": "headline_size",
      "label": "Headline size",
      "options": [
        {
          "value": "headline-style-h1",
          "label": "H1"
        },
        {
          "value": "headline-style-h2",
          "label": "H2"
        },
        {
          "value": "headline-style-h3",
          "label": "H3"
        },
        {
          "value": "headline-style-h4",
          "label": "H4"
        },
        {
          "value": "headline-style-h5",
          "label": "H5"
        },
        {
          "value": "headline-style-h6",
          "label": "H6"
        }
      ],
      "default": "headline-style-h3"
    }
  ],
  "blocks": [
    {
      "type": "quote",
      "name": "Testimonial",
      "settings": [
        {
          "type": "richtext",
          "id": "quote",
          "label": "Testimonial",
          "default": "<p>Add customer reviews and testimonials to showcase your store's happy customers.</p>"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author name",
          "default": "Customer Name"
        },
        {
          "type": "range",
          "id": "rating",
          "label": "Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "HAE Testimonials",
      "category": "Content",
      "blocks": [
        {
          "type": "quote"
        },
        {
          "type": "quote"
        },
        {
          "type": "quote"
        }
      ]
    }
  ]
}
{% endschema %}
