{{ 'hae-brand-about.css' | asset_url | stylesheet_tag }}

<section class='brand-about color-{{ section.settings.color_scheme }}'>
  <div class='brand-about__intro '>
    <div class='brand-about__intro__contain container-main section-padding-x-small'>
      <div class='brand-about__intro__layout grid grid-2 grid-end'>
        <div class='brand-about__intro__text'>
          <h2 class='brand-about__subtitle {{ section.settings.headline_size }}'>
            {{ section.settings.subtitle }}
          </h2>
          <div class='brand-about__text {{ section.settings.text_size }}'>
            {{ section.settings.text }}
          </div>
        </div>

        <div class='brand-about__intro__ctas'>
          {% if section.settings.button_link_1 != blank
            and section.settings.button_text_1 != blank
          %}
            <a
              class='button button--primary button--medium'
              href='{{ section.settings.button_link_1 }}'
            >
              {{- section.settings.button_text_1 -}}
            </a>
          {% endif %}
          {% if section.settings.button_link_2 != blank
            and section.settings.button_text_2 != blank
          %}
            <a
              class='button button--primary button--medium'
              href='{{ section.settings.button_link_2 }}'
            >
              {{- section.settings.button_text_2 -}}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <div class='brand-about__callouts grid grid-3'>
    {%- for block in section.blocks -%}
      <div
        class='brand-about__callout color-{{ block.settings.color_scheme }}'
        {{ block.shopify_attributes }}
      >
        <div class='brand-about__callout__contain'>
          {% if block.settings.callout_image != blank %}
            <div class='brand-about__callout-image-wrapper'>
              <img
                class='brand-about__callout-image'
                height='64'
                width='64'
                loading='lazy'
                src='{{ block.settings.callout_image | img_url: '128x' }}'
                alt='{{ block.settings.callout_image.alt | default: block.settings.callout_header }}'
              >
            </div>
          {% endif %}
          <h3 class='brand-about__callout-heading headline-style-h4'>
            {{ block.settings.callout_header }}
          </h3>
          <div class='brand-about__callout-text {{ block.settings.text_size }}'>
            {{ block.settings.callout_text }}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>
</section>

