          "value": "image",
          "label": "Image"
        },
        {
          "value": "video",
          "label": "Video"
        }
      ],
      "default": "image"
    },
    {
      "type": "select",
      "id": "media_aspect_ratio",
      "label": "Media aspect ratio",
      "options": [
        {
          "value": "16/9",
          "label": "16:9 (Landscape)"
        },
        {
          "value": "4/3",
          "label": "4:3 (Portrait)"
        },
        {
          "value": "1/1",
          "label": "1:1 (Square)"
        },
        {
          "value": "1/.8",
          "label": "1:0.8 (Shorter Square)"
        },
        {
          "value": "3/4",
          "label": "3:4 (Portrait)"
        }
      ],
      "default": "1/1"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL",
      "info": "MP4 format required"
    },
    {
      "type": "image_picker",
      "id": "video_poster",
      "label": "Video poster image"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Media alignment",
      "default": "left",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Image with text"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Heading size",
          "options": [
            {
              "value": "headline-style-h1",
              "label": "H1"
            },
            {
              "value": "headline-style-h2",
              "label": "H2"
            },
            {
              "value": "headline-style-h3",
              "label": "H3"
            },
            {
              "value": "headline-style-h4",
              "label": "H4"
            }
          ],
          "default": "headline-style-h2"
        }
      ]
    },
    {
      "type": "text",
      "name": "Rich text",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post.</p>"
        },
        {
          "type": "select",
          "id": "text_size",
          "label": "Text size",
          "options": [
            {
              "value": "text-size-small",
              "label": "Small"
            },
            {
              "value": "text-size-medium",
              "label": "Regular"
            },
            {
              "value": "text-size-large",
              "label": "Large"
            },
            {
              "value": "text-size-x-large",
              "label": "X-Large"
            },
            {
              "value": "text-size-xx-large",
              "label": "XX-Large"
            }
          ],
          "default": "text-size-medium"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Button"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "select",
          "id": "button_size",
          "label": "Button size",
          "options": [
            {
              "value": "button--small",
              "label": "Small"
            },
            {
              "value": "button--medium",
              "label": "Medium"
            },
            {
              "value": "button--large",
              "label": "Large"
            }
          ],
          "default": "button--medium"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with text",
      "category": "Image",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
