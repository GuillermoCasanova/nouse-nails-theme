{{ 'image-with-text.css' | asset_url | stylesheet_tag }}

<section class="image-with-text color-{{ section.settings.color_scheme }}">
  <div class="image-with-text__container container-main section-padding-small">
    <div class="image-with-text__content grid grid-2 grid-gap-lg">
      <div class="image-with-text__media-wrapper">
        {% if section.settings.media_type == 'image' %}
          {% if section.settings.image != blank %}
            <div class="image-with-text__media">
              {% render 'image-with-aspect-ratio',
                image: section.settings.image,
                aspect_ratio: section.settings.media_aspect_ratio,
                alt: product.title
              %}
            </div>
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
        {% else %}
          <video
            class="responsive-video"
            autoplay
            loop
            muted
            playsinline
            poster="{{ section.settings.video_poster | img_url }}"
          >
            <source src="{{ section.settings.video_url }}" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        {% endif %}
      </div>
      <div class="image-with-text__text">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'heading' %}
              <h2 class="{{ block.settings.heading_size }}">{{ block.settings.heading | escape }}</h2>
            {% when 'text' %}
              <div class="{{ block.settings.text_size }}">{{ block.settings.text }}</div>
            {% when 'button' %}
              <div class="image-with-text__button-wrapper">
                <a
                  href="{{ block.settings.button_link }}"
                  class="button {{ block.settings.button_size }} button--primary"
                  aria-label="{{ block.settings.button_label | escape }}"
                >
                  {{- block.settings.button_label | escape -}}
                </a>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image with text",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
