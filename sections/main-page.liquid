{% comment %} <link rel="stylesheet" href="{{ 'section-text-page.css' | asset_url }}" media="print" onload="this.media='all'"> {% endcomment %}
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

{% comment %} <noscript>{{ 'section-text-page.css' | asset_url | stylesheet_tag }}</noscript> {% endcomment %}
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

{% style %}
  .text-page__body {
    margin-bottom: var(--level10);
  }

  @media only screen and (min-width: 940px) {
    .text-page__body {
      font-size: var(--normal);
      max-width: 50rem;
    }
  }
{% endstyle %}

<section class="page-width text-page master-padding-top">
  {% if section.settings.hide_body == 'false' %}
    {% if page.content != blank %}
      <div class="rte  text-page__body container-x-small">
        {{ page.content }}
      </div>
    {% endif %}
  {% endif %}
</section>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "radio",
      "id": "hide_body",
      "label": "Hide main page body?",
      "options": [
        {
          "value": "false",
          "label": "Yes"
        },
        {
          "value": "true",
          "label": "No"
        }
      ]
    }
  ]
}
{% endschema %}
