{% comment %} <link rel="stylesheet" href="{{ 'section-text-page.css' | asset_url }}" media="print" onload="this.media='all'"> {% endcomment %}
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

{% comment %} <noscript>{{ 'section-text-page.css' | asset_url | stylesheet_tag }}</noscript> {% endcomment %}
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

{% style %}
  .text-page__header {
    width: 100%;
    text-align: center;
    padding-top: var(--level7);
    padding-bottom: var(--level9);
  }

  .text-page__header__heading {
    font-family: var(--tertiary-font-family);
    font-size: var(--h2);
  }

  @media only screen and (min-width: 940px) {
    .text-page__header__heading {
      font-size: var(--h1);
    }
  }

  .text-page__body {
    max-width: 50rem;
    margin-right: auto;
    margin-left: auto;
    margin-bottom: var(--level10);
  }

  @media only screen and (min-width: 940px) {
    .text-page__body {
      font-size: var(--normal);
    }
  }
{% endstyle %}

<div class="page-width text-page master-padding-top">
  {% if section.settings.hide_body == 'true' %}
    {% if page.content != blank %}
      <div class="rte text-page__body">
        {{ page.content }}
      </div>
    {% endif %}
  {% endif %}
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "radio",
      "id": "hide_body",
      "label": "Hide main page body?",
      "options": [
        {
          "value": "false",
          "label": "Yes"
        },
        {
          "value": "true",
          "label": "No"
        }
      ]
    }
  ]
}
{% endschema %}
