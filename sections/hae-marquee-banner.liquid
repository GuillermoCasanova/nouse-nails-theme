{% schema %}
{
  "name": "Marquee banner",
  "settings": [
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },

    {
      "type": "text",
      "id": "text",
      "label": "Banner text",
      "info": "Enter text once - text will auto repeat"
    }
  ],

  "presets": [
