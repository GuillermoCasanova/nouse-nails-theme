{% comment %} <link rel="stylesheet" href="{{ 'section-faqs-list.css' | asset_url }}" media="print" onload="this.media='all'"> {% endcomment %}
<script src="{{ 'details-disclosure.js' | asset_url }}" defer="defer"></script>
{{ 'faqs.css' | asset_url | stylesheet_tag }}

<!-- FAQs Section -->
<section class="faqs-list-section color-{{ section.settings.color_scheme }}">
  <div class="faqs-list__contain container-main section-padding-small" data-tabs-panel>
    <div class="faqs-list__layout grid grid-2">
      <!-- Table Content -->
      {% if section.settings.page != blank %}
        <div class="faqs-list__page-content">
          {{ pages[section.settings.page].content }}
        </div>
      {% endif %}

      <!-- FAQ Questions -->
      <div class="faqs-list__questions-list">
        {% if section.settings.heading != blank %}
          <h2 class="faqs-list__heading headline-style-h3">{{ section.settings.heading }}</h2>
        {% endif %}

        {% for block in section.blocks %}
          {% if block.type == 'faq_block' %}
            <drawer-disclosure>
              <details class="faq-item" data-id="faq-{{ forloop.index }}" {{ block.shopify_attributes }}>
                <summary
                  class="faq-item__question"
                  aria-expanded="false"
                  aria-label="Open FAQ answer for question {{ forloop.index }}"
                  data-id="{{ forloop.index }}"
                >
                  {{ block.settings.question }}
                  <span class="faq-item__icon">
                    <svg class="open-icon">
                      <use href="#icon-plus-sign"/>
                    </svg>
                    <svg class="close-icon">
                      <use href="#icon-negative-sign"/>
                    </svg>
                  </span>
                </summary>
                <div class="faq-item__answer" data-drawer-content data-id="{{ forloop.index }}">
                  <div data-drawer-content-inner>
                    {{ block.settings.answer }}
                  </div>
                </div>
              </details>
            </drawer-disclosure>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQs",
  "enabled_on": {
    "templates": ["page"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "page",
      "id": "page",
      "label": "Select Page",
      "info": "Select a page that host the table element."
    }
  ],
  "blocks": [
    {
      "type": "faq_block",
      "name": "FAQ Block",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What is your question?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Provide your answer here.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Section",
      "blocks": [
        {
          "type": "faq_block"
        },
        {
          "type": "faq_block"
        },
        {
          "type": "faq_block"
        }
      ]
    }
  ]
}
{% endschema %}
