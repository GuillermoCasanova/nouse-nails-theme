<div>
  <div class="hae-header text-center py-40 px-40-gutters d-flex-column flex-justify-center" style="background-image: url('{{ page.metafields.global.hero_photo | asset_url }}'); ">
    <h1 class="fs-60">
      {{ page.title }}
    </h1>
    <p class="rte fs-18 mt-16">{{ page.content }}</p>
  </div>

  <div>
    {% for block in section.blocks %}

    {% if block.type == 'left_photo' %}
    <div class="d-mlg-flex-row-reverse" style="background-color: {{ block.settings.background_color }};">
      <div class="p-40-gutters col-mlg-6 d-flex-column flex-justify-center flex-align-center">
        <div class="col-mlg-10">
          <h2 class="mt-16 mt-mlg-0 mb-16 fs-48 mabry-med">{{ block.settings.header }}</h2>
          <p class="fs-18">{{ block.settings.text }}</p>
        </div>
      </div>

      <div class="p-40-gutters col-mlg-6">
        <img
        class="width-full big-img-b-radius"
        src="{{ block.settings.image | img_url }}"
        srcset=
        "{{ block.settings.image | img_url: "1440x", scale: 2 }} 2560w",
        "{{ block.settings.image | img_url: "400x", scale: 2 }} 1024w",
        "{{ block.settings.image | img_url: "768x", scale: 2 }} 768w",
        "{{ block.settings.image | img_url: "425x", scale: 2 }} 425w"
        sizes="50vw"
        alt="{{ alt | default: 'Hae photo' }}" >
      </div>
    </div>
    {% elsif block.type == 'left_photo_cta' %}
    <div class="d-mlg-flex-row-reverse" style="background-color: {{ block.settings.background_color }};">
      <div class="p-40-gutters col-mlg-6 d-flex-column flex-justify-center">
        <h2 class="mt-16 mt-mlg-0 mb-16 fs-48 mabry-med">{{ block.settings.header }}</h2>
        <p class="fs-18">{{ block.settings.text }}</p>

        <a class="width-fit-content button-pill button-blue mt-16 mt-md-32" href="{{ block.settings.link }}">{{ block.settings.link_text }}</a>
      </div>

      <div class="p-40-gutters col-mlg-6">
        <img
        class="width-full big-img-b-radius"
        src="{{ block.settings.image | img_url }}"
        srcset=
        "{{ block.settings.image | img_url: "1440x", scale: 2 }} 2560w",
        "{{ block.settings.image | img_url: "400x", scale: 2 }} 1024w",
        "{{ block.settings.image | img_url: "768x", scale: 2 }} 768w",
        "{{ block.settings.image | img_url: "425x", scale: 2 }} 425w"
        sizes="50vw"
        alt="{{ alt | default: 'Hae photo' }}" >
      </div>
    </div>
    {% elsif block.type == 'right_photo' %}
    <div class="d-mlg-flex-row" style="background-color: {{ block.settings.background_color }};">
      <div class="p-40-gutters col-mlg-6 d-flex-column flex-justify-center">
        <h2 class="mt-16 mt-mlg-0 mb-16 fs-48 mabry-med">{{ block.settings.header }}</h2>
        <p class="fs-18">{{ block.settings.text }}</p>
      </div>

      <div class="p-40-gutters col-mlg-6">
        <img
        class="width-full big-img-b-radius"
        src="{{ block.settings.image | img_url }}"
        srcset=
        "{{ block.settings.image | img_url: "1440x", scale: 2 }} 2560w",
        "{{ block.settings.image | img_url: "400x", scale: 2 }} 1024w",
        "{{ block.settings.image | img_url: "768x", scale: 2 }} 768w",
        "{{ block.settings.image | img_url: "425x", scale: 2 }} 425w"
        sizes="50vw"
        alt="{{ alt | default: 'Hae photo' }}" >
      </div>
    </div>
    {% elsif block.type == 'right_photo_cta' %}
    <div class="d-mlg-flex-row" style="background-color: {{ block.settings.background_color }};">
      <div class="p-40-gutters col-mlg-6 d-flex-column flex-justify-center">
        <h2 class="mt-16 mt-mlg-0 mb-16 fs-48 mabry-med">{{ block.settings.header }}</h2>
        <p class="fs-18">{{ block.settings.text }}</p>

        <a class="width-fit-content button-pill button-blue mt-16 mt-md-32" href="{{ block.settings.link }}">{{ block.settings.link_text }}</a>
      </div>

      <div class="p-40-gutters col-mlg-6">
        <img
        class="width-full big-img-b-radius"
        src="{{ block.settings.image | img_url }}"
        srcset=
        "{{ block.settings.image | img_url: "1440x", scale: 2 }} 2560w",
        "{{ block.settings.image | img_url: "400x", scale: 2 }} 1024w",
        "{{ block.settings.image | img_url: "768x", scale: 2 }} 768w",
        "{{ block.settings.image | img_url: "425x", scale: 2 }} 425w"
        sizes="50vw"
        alt="{{ alt | default: 'Hae photo' }}" >
      </div>
    </div>
    {% elsif block.type == 'ticker' %}
    <section class="ticker-container bg-wine-dark text-white fs-40 type-link">
      <div class="ticker">
        <span>{{ block.settings.ticker_text }}</span>
        <span style="color: #FDF130;">☀</span>
        <span>{{ block.settings.ticker_text }}</span>
        <span style="color: #AEC1FB;">☺</span>
        <span>{{ block.settings.ticker_text }}</span>
        <span style="color: #EFBDFC;">♥</span>
        <span>{{ block.settings.ticker_text }}</span>
        <span style="color: #FF8A64;">☀</span>
        <span>{{ block.settings.ticker_text }}</span>
        <span style="color: #FDF130;">☺</span>
        <span>{{ block.settings.ticker_text }}</span>
        <span style="color: #AEC1FB;">♥</span>
      </div>
    </section>
    {% endif %}

    {% endfor %}
  </div>
</div>


