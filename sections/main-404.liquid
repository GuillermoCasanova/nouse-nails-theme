<style type='text/css'>
  .template-404 .title + * {
    margin-top: 1rem;
  }

  @media screen and (min-width: 700px) {
    .template-404 .title + * {
      margin-top: 2rem;
    }
  }
</style>

<div class='template-404 page-width page-margin center'>
  <p>
    {{ 'templates.404.subtext' | t }}
  </p>
  <h1 class='title'>
    {{ 'templates.404.title' | t }}
  </h1>
  <a href='{{ routes.all_products_collection_url }}' class='button'>
    {{ 'general.continue_shopping' | t }}
  </a>
</div>

{% schema %}
{
  "name": "404 Page",
  "settings": [
    {
      "type": "header",
      "content": "404 Page Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Page Title",
      "default": "Page not found"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Sorry, we couldn't find the page you're looking for."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Continue shopping"
    }
  ],
  "presets": [
    {
      "name": "404 Page",
      "category": "Templates & Pages"
    }
  ]
}
{% endschema %}
