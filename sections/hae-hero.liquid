{{ 'hae-hero.css' | asset_url | stylesheet_tag }}

<section class="hero-header  color-{{ section.settings.color_scheme }}">
  <div class="hero-header__layout  grid grid-2">
    <div class="hero-header__left-column  section-padding-small">
      <div class="hero-header__text  container-main">
        <h2 class="hero-header__heading headline-style-display">{{ section.settings['header-text'] }}</h2>
        <a class="button  button--primary button--large  width-fit-content" href="{{ section.settings.button-url }}">
          {{- section.settings['button-text'] -}}
        </a>
      </div>
    </div>

    <div class="hero-header__right-column col-mlg-6  p-relative">
      <div class="hero-header__media">
        {% if section.settings.show_sticker %}
          <div class="hero-header__sticker">
            {% if section.settings.sticker_image != blank %}
              {% render 'image-with-aspect-ratio',
                image: section.settings.sticker_image,
                aspect_ratio: '1/1',
                alt: 'Sticker',
                loading: 'lazy',
                width: 100,
                height: 100
              %}
            {% else %}
              {% render 'floating-sticker',
                sticker_type: section.settings['floating-sticker'],
                custom_class: 'hero-half-sticker',
                color: section.settings.sticker_color
              %}
            {% endif %}
          </div>
        {% endif %}

        {% if section.settings.media_type == 'image' %}
          <img
            class="responsive-image"
            src="{{ section.settings.hero-image | img_url }}"
            srcset="{{ section.settings.hero-image | img_url: '1440x', scale: 2 }} 2560w, {{ section.settings.hero-image | img_url: '400x', scale: 2 }} 1024w, {{ section.settings.hero-image | img_url: '768x', scale: 2 }} 768w, {{ section.settings.hero-image | img_url: '425x', scale: 2 }} 425w"
            sizes="50vw"
            alt="{{ alt | default: 'Featured content' }}"
            width="800"
            height="600"
          >
        {% else %}
          <video
            class="responsive-video"
            autoplay
            loop
            muted
            playsinline
            poster="{{ section.settings.video_poster | img_url }}"
          >
            <source src="{{ section.settings.video_url }}" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero - half photo",
  "settings": [
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "id": "header-text",
      "label": "Header text"
    },
    {
      "type": "text",
      "id": "button-text",
      "label": "Button text",
      "default": "Shop"
    },
    {
      "type": "url",
      "id": "button-url",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Media"
    },
    {
      "type": "select",
      "id": "media_type",
      "options": [
        { "value": "image", "label": "Image" },
        { "value": "video", "label": "Video" }
      ],
      "default": "image",
      "label": "Media type"
    },
    {
      "type": "image_picker",
      "id": "hero-image",
      "label": "Image",
      "info": "Suggestion: 72res, at least 1440px wide"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL",
      "info": "MP4 format required"
    },
    {
      "type": "image_picker",
      "id": "video_poster",
      "label": "Video poster image",
      "info": "Shown while video loads"
    },
    {
      "type": "header",
      "content": "Sticker"
    },
    {
      "type": "checkbox",
      "id": "show_sticker",
      "label": "Show sticker",
      "default": true
    },
    {
      "type": "select",
      "id": "floating-sticker",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "stars", "label": "Stars" },
        { "value": "sun-blue", "label": "Sun Blue" },
        { "value": "sun-pink", "label": "Sun Pink" }
      ],
      "label": "Floating sticker"
    },
    {
      "type": "color",
      "id": "sticker_color",
      "label": "Sticker color",
      "default": "#FDF130"
    },
    {
      "type": "image_picker",
      "id": "sticker_image",
      "label": "Custom Sticker Image",
      "info": "Upload PNG (transparent bg) or SVG if not using the default sticker types"
    }
  ],

  "presets": [
    {
      "name": "Hero - half photo",
      "category": "Hae custom"
    }
  ]
}
{% endschema %}
