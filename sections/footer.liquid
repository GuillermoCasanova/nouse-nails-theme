    {
      "type": "checkbox",
      "id": "show_bottom_menu",
      "label": "Show bottom navigation menu",
      "default": true
    },
    {
      "type": "link_list",
      "id": "bottom_menu",
      "label": "Bottom navigation menu",
      "info": "This menu will appear at the bottom of the footer"
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "category": "Navigation & Layout"
    }
  ]
}
{% endschema %}
