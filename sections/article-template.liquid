<header class="d-mlg-flex-row">
  <div class="hero-section col-mlg-6 d-flex-column flex-justify-center bg-condensed-milk p-40-gutters">
    {% if section.settings.blog_show_date %}
      <p class="mabry-med fs-18 mb-12">
        {{ article.published_at | time_tag: format: 'date' }}
      </p>
    {% endif %}

    <h1 class="fs-60 mt-60 mt-lg-0 lh-110 mb-24" id="title-0">{{ article.title }}</h1>

    {% if article.excerpt.size > 0 %}
    <p>
      {{ article.excerpt }}
    </p>
    {% endif %}
  </div>

  <div class="hero-section col-mlg-6 p-40-gutters bg-hero-half-gradient p-40-gutters p-relative">
    <img
    class="width-full big-img-b-radius"
    src="{{ article.image | img_url }}"
    srcset=
    "{{ article.image | img_url: "1440x", scale: 2 }} 2560w",
    "{{ article.image | img_url: "400x", scale: 2 }} 1024w",
    "{{ article.image | img_url: "768x", scale: 2 }} 768w",
    "{{ article.image | img_url: "425x", scale: 2 }} 425w"
    sizes="50vw"
    alt="{{ alt | default: 'Featured content' }}" >
  </div>
</header>

<div class="rte article-width px-40-gutters mx-auto mt-72 mb-60">
  {{ article.content }}

  {% if section.settings.blog_show_author %}
  <p class="mabry-med mt-40">{{ 'blogs.article.by_author' | t: author: article.author }}</span>
  {% endif %}
</div>

<div class="article-width px-40-gutters mx-auto">
  {% if section.settings.show_share_buttons %}
    {% include 'social-sharing', share_title: article.title, share_permalink: article.url, share_image: article.image %}
  {% endif %}
</div>


