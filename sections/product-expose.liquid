{{ 'product-expose.css' | asset_url | stylesheet_tag }}

<script src='{{ 'details-disclosure.js' | asset_url }}' defer='defer'></script>
<script src='{{ 'swiper-slideshow.js' | asset_url }}' defer='defer'></script>

<section class='product-expose color-{{ section.settings.color_scheme }}'>
  <div class='product-expose__contain container-main section-padding-main'>
    <div class='product-expose__blocks grid grid-2'>
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'slideshow' %}
            <div
              class='product-expose__block product-expose__slideshow color-{{ block.settings.color_scheme }} {{ block.settings.padding_size }}'
              {{ block.shopify_attributes }}
            >
              <div class='product-expose__block__inner container-small'>
                {% if block.settings.slideshow_heading != blank %}
                  <h2 class='product-expose__block-heading {{ block.settings.heading_size }}'>
                    {{ block.settings.slideshow_heading }}
                  </h2>
                {% endif %}

                <div class='product-expose__slideshow-container'>
                  <swiper-slideshow
                    class='product-expose__swiper-wrapper'
                    slides-per-view='1'
                    space-between='0'
                    loop='true'
                    autoplay='false'
                    effect='fade'
                    show-navigation='true'
                    show-pagination='true'
                  >
                    <div
                      class='swiper product-expose-swiper'
                      data-swiper-slideshow
                    >
                      <div class='swiper-wrapper' data-swiper-slideshow-wrapper>
                        {% if block.settings.image_1 != blank %}
                          <div class='swiper-slide'>
                            {% render 'image-with-aspect-ratio',
                              image: block.settings.image_1,
                              aspect_ratio: block.settings.aspect_ratio,
                              alt: block.settings.image_1.alt,
                              sizes: '(min-width: 768px) 50vw, 100vw',
                              widths: '400,600,800,1200'
                            %}
                          </div>
                        {% endif %}
                        {% if block.settings.image_2 != blank %}
                          <div class='swiper-slide'>
                            {% render 'image-with-aspect-ratio',
                              image: block.settings.image_2,
                              aspect_ratio: block.settings.aspect_ratio,
                              alt: block.settings.image_2.alt,
                              sizes: '(min-width: 768px) 50vw, 100vw',
                              widths: '400,600,800,1200'
                            %}
                          </div>
                        {% endif %}
                        {% if block.settings.image_3 != blank %}
                          <div class='swiper-slide'>
                            {% render 'image-with-aspect-ratio',
                              image: block.settings.image_3,
                              aspect_ratio: block.settings.aspect_ratio,
                              alt: block.settings.image_3.alt,
                              sizes: '(min-width: 768px) 50vw, 100vw',
                              widths: '400,600,800,1200'
                            %}
                          </div>
                        {% endif %}
                        {% if block.settings.image_4 != blank %}
                          <div class='swiper-slide'>
                            {% render 'image-with-aspect-ratio',
                              image: block.settings.image_4,
                              aspect_ratio: block.settings.aspect_ratio,
                              alt: block.settings.image_4.alt,
                              sizes: '(min-width: 768px) 50vw, 100vw',
                              widths: '400,600,800,1200'
                            %}
                          </div>
                        {% endif %}
                      </div>
                      <div class='product-expose__slideshow-navigation'>
                        <button
                          class='product-expose__nav-button product-expose__nav-button--prev swiper-slideshow__nav-button swiper-slideshow__nav-button--prev'
                          aria-label='Previous slide'
                        >
                          {% render 'icon-chevron-left' %}
                        </button>
                        <button
                          class='product-expose__nav-button product-expose__nav-button--next swiper-slideshow__nav-button swiper-slideshow__nav-button--next'
                          aria-label='Next slide'
                        >
                          {% render 'icon-chevron-right' %}
                        </button>
                      </div>
                      <div
                        class='product-expose__slideshow-pagination swiper-slideshow__pagination'
                      ></div>
                    </div>
                  </swiper-slideshow>
                </div>
              </div>
            </div>

          {% when 'richtext' %}
            <div
              class='product-expose__block product-expose__richtext color-{{ block.settings.color_scheme }} {{ block.settings.padding_size }}'
              {{ block.shopify_attributes }}
            >
              <div class='product-expose__block__inner container-small'>
                {% if block.settings.richtext_heading != blank %}
                  <h2 class='product-expose__block-heading {{ block.settings.heading_size }}'>
                    {{ block.settings.richtext_heading }}
                  </h2>
                {% endif %}
                <div class='product-expose__richtext-content rte {{ block.settings.text_size }}'>
                  {{ block.settings.richtext_content }}
                </div>
              </div>
            </div>

          {% when 'certifications' %}
            <div
              class='product-expose__block product-expose__certifications color-{{ block.settings.color_scheme }} {{ block.settings.padding_size }}'
              {{ block.shopify_attributes }}
            >
              <div class='product-expose__block__inner container-small'>
                {% if block.settings.certifications_heading != blank %}
                  <h2 class='product-expose__block-heading {{ block.settings.heading_size }}'>
                    {{ block.settings.certifications_heading }}
                  </h2>
                {% endif %}
                <div class='product-expose__certifications-grid'>
                  {% if block.settings.cert_image_1 != blank %}
                    <div class='product-expose__cert-item'>
                      {% render 'image-with-aspect-ratio',
                        image: block.settings.cert_image_1,
                        aspect_ratio: 'natural',
                        alt: block.settings.cert_image_1.alt,
                        sizes: '200px',
                        widths: '200,400'
                      %}
                      {% if block.settings.cert_label_1 != blank %}
                        <p class='product-expose__cert-label'>
                          {{ block.settings.cert_label_1 }}
                        </p>
                      {% endif %}
                    </div>
                  {% endif %}
                  {% if block.settings.cert_image_2 != blank %}
                    <div class='product-expose__cert-item'>
                      {% render 'image-with-aspect-ratio',
                        image: block.settings.cert_image_2,
                        aspect_ratio: 'natural',
                        alt: block.settings.cert_image_2.alt,
                        sizes: '200px',
                        widths: '200,400'
                      %}
                      {% if block.settings.cert_label_2 != blank %}
                        <p class='product-expose__cert-label'>
                          {{ block.settings.cert_label_2 }}
                        </p>
                      {% endif %}
