                    {{ block.settings.faq_heading }}
                  </h2>
                {% endif %}
                <div class='product-expose__faq-list'>
                  {% if block.settings.question_1 != blank %}
                    <drawer-disclosure>
                      <details class='product-expose__faq-item'>
                        <summary class='product-expose__faq-question'>
                          {{ block.settings.question_1 }}
                          <span class='product-expose__faq-icon'>
                            <span class='open-icon'>→</span>
                          </span>
                        </summary>
                        <div
                          class='product-expose__faq-answer'
                          data-drawer-content
                        >
                          <div data-drawer-content-inner>
                            {{ block.settings.answer_1 }}
                          </div>
                        </div>
                      </details>
