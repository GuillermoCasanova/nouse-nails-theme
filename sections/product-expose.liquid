                  {% endif %}
                  {% if block.settings.cert_image_4 != blank %}
                    <div class='product-expose__cert-item'>
                      {% render 'image-with-aspect-ratio',
                        image: block.settings.cert_image_4,
                        aspect_ratio: 'natural',
                        alt: block.settings.cert_image_4.alt,
                        sizes: '200px',
                        widths: '200,400'
                      %}
                      {% if block.settings.cert_label_4 != blank %}
