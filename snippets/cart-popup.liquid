{%- style -%}
  {% assign cart_popup_box_shadow = settings.color_borders | color_modify: 'alpha', 0.5 %}
{%- endstyle -%}

<div class="small-img-b-radius cart-popup-wrapper cart-popup-wrapper--hidden critical-hidden" role="dialog" aria-modal="true" aria-labelledby="CartPopupHeading" data-cart-popup-wrapper>
  <div class="px-24 py-12" data-cart-popup tabindex="-1" style="outline: none;">
    <div class="cart-popup__header">
      <h2 id="CartPopupHeading" class="cart-popup__heading fs-14 py-12">{{ 'cart.popup.added_to_cart' | t }}</h2>
      <button class="cart-popup__close" aria-label="{{ 'general.accessibility.close_modal' | t }}" data-cart-popup-close>{% include 'icon-close' %}</button>
    </div>
    <div class="cart-popup-item border-y-2 py-16 mb-24">
      <div class="cart-popup-item__image-wrapper hide" data-cart-popup-image-wrapper data-image-loading-animation></div>
      <div class="cart-popup-item__description">
        <div>
          <h3 class="mabry-med fs-16" data-cart-popup-title></h3>
          <ul class="product-details" aria-label="{{ 'cart.popup.product_details' | t }}" data-cart-popup-product-details></ul>
        </div>
        <div class="cart-popup-item__quantity fs-16">
          <span class="visually-hidden" data-cart-popup-quantity-label></span>
          <span aria-hidden="true">{{ 'cart.popup.quantity' | t }}:</span>
          <span aria-hidden="true" data-cart-popup-quantity></span>
        </div>
      </div>
    </div>
    <div class="text-center">
      <a href="{{ routes.cart_url }}" class="button-pill button-blue">
        {{ 'products.product.view_cart' | t }} (<span data-cart-popup-cart-quantity></span>)
      </a>
    </div>

    <div class="cart-popup__dismiss">
      <button class="cart-popup__dismiss-button text-link text-uppercase fs-14 py-12" data-cart-popup-dismiss>
        {{ 'cart.general.continue_shopping' | t }}
      </button>
    </div>
  </div>
</div>
